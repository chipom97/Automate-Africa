<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_custom" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="/form/sheet/group/group/field[@name='vat']" position="before">
                <field name="activation_date"/>
                <field name="device_imei"/>
                <field name="device_placement"/>
                <field name="phone_number"/>
                <field name="sim_serial_no"/>
                <field name="remarks"/>
            </xpath>

            <xpath expr="/form/sheet/group/group/field[@name='website']" position="after">
                <field name="device_model"/>
                <field name="vehicle_reg_no"/>
                <field name="network_provider"/>
                <field name="reminder"/>
            </xpath>

        </field>
    </record>
</odoo>